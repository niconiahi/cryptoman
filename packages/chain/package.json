{
  "name": "@cryptoman/chain",
  "type": "module",
  "version": "0.0.3",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niconiahi/cryptoman"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test:unit": "vitest",
    "indexer": "node --loader tsm src/chain/indexer.ts"
  },
  "dependencies": {
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "simple-git": "^3.21.0",
    "tsm": "^2.3.0",
    "tsup": "^8.5.0",
    "vitest": "^3.2.4"
  }
}
