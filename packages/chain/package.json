{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ethernauta/chain",
  "type": "module",
  "version": "0.0.10",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niconiahi/cryptoman"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && biome format --write dist",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test:unit": "vitest",
    "indexer": "node --loader tsm src/chain/indexer.ts && pnpm run format"
  },
  "peerDependencies": {
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "simple-git": "^3.21.0",
    "tsm": "^2.3.0",
    "tsdown": "^0.13.3"
  }
}
