{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ethernauta/wallet",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "run-p \"build:*:watch\"",
    "build": "run-p \"build:*[!watch]\" && pnpm run format",
    "build:manifest": "vite build --config vite.manifest.config.ts",
    "build:extension": "vite build --config vite.extension.config.ts",
    "build:manifest:watch": "vite build --watch --config vite.manifest.config.ts",
    "build:extension:watch": "vite build --watch --config vite.extension.config.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "zip": "cd dist && zip -r ../extension.zip .",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@noble/hashes": "1.8.0",
    "@noble/secp256k1": "2.3.0",
    "@preact/signals": "^2.2.1",
    "@scure/bip32": "1.7.0",
    "@scure/bip39": "1.6.0",
    "preact": "10.26.9",
    "valibot": "1.1.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "2.10.2",
    "@types/chrome": "^0.1.1",
    "fake-indexeddb": "6.0.1",
    "viem": "^2.33.2",
    "npm-run-all": "^4.1.5"
  }
}
