{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@total-typescript/tsconfig/tsc/dom/library",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "types": ["vitest/globals", "chrome"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@ethernauta/*": ["./packages/*/src"]
    }
  }
}
