{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "cryptoman",
  "type": "module",
  "scripts": {
    "dev": "pnpm --recursive --parallel --filter @ethernauta/wallet --filter @ethernauta/playground dev",
    "test": "pnpm --recursive --filter !@ethernauta/connector run test:unit",
    "build": "pnpm --parallel --filter @ethernauta/eth --filter @ethernauta/wallet --filter @ethernauta/transport run build",
    "lint": "pnpm --recursive --parallel lint",
    "lint:fix": "pnpm -recursive --parallel lint:fix",
    "format": "pnpm --recursive format",
    "publish": "pnpm publish --filter @ethernauta/transport --filter @ethernauta/eth --filter @ethernauta/chain --filter @ethernauta/transaction"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@edge-runtime/vm": "^5.0.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@total-typescript/tsconfig": "1.0.4",
    "tsdown": "^0.13.3",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.2.4"
  }
}
