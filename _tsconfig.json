{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@total-typescript/tsconfig/tsc/dom/library",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "types": [
      "vitest/globals",
      "chrome"
    ],
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@ethernauta/transport": [
        "./packages/transport/src"
      ],
      "@ethernauta/eth": [
        "./packages/eth/src"
      ],
      "@ethernauta/chain": [
        "./packages/chain/src"
      ],
      "@ethernauta/connector": [
        "./packages/connector/src"
      ],
      "@ethernauta/wallet": [
        "./packages/wallet/src"
      ]
    }
  }
}
